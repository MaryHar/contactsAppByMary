<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContactView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        android:backgroundTint="#E8CCCC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/contactFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Arsen"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toEndOf="@+id/imageContact"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="094989498"
                android:textColor="#272525"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/contactFirstName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/contactFirstName"
                app:layout_constraintTop_toBottomOf="@+id/contactFirstName" />

            <ImageView
                android:id="@+id/imageContact"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/radius"
                app:layout_constraintBottom_toBottomOf="parent"
                android:foreground="@drawable/radius"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/avatar2" />

            <ImageView
                android:id="@+id/imageDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/delete"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageEdit"
                app:layout_constraintEnd_toStartOf="@+id/imageEdit"
                app:layout_constraintTop_toTopOf="@+id/imageEdit"

                 />


            <ImageView
                android:id="@+id/imageEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/edit"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
